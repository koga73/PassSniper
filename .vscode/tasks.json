    "version": "2.0.0",
	"tasks": [
		{
			"label": "build64-debug",
			"type": "shell",
			"options": {
				"cwd": "${workspaceRoot}"
			},
			//"command": "C:/mingw-w64/x86_64-7.3.0-posix-sjlj-rt_v5-rev0/mingw64/bin/g++.exe",
