{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "g++",
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "args": [
                "-g", "src/main.cpp",
                "-o", "bin/test.exe"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true
            },
            "showOutput": "always"
        }
    ]
}